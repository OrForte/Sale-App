<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_login_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LoginFragment"
    android:focusableInTouchMode="true">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/fragment_login_tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Password:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragement_login_tvEmail" />

    <TextView
        android:id="@+id/fragement_login_tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Email:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragment_login_etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textNoSuggestions|textPersonName"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/fragement_login_tvEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragment_login_etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textNoSuggestions|textPassword"
        app:layout_constraintStart_toEndOf="@+id/fragment_login_tvPassword"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_etEmail" />

    <Button
        android:id="@+id/fragment_login_btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_tvPassword" />

    <Button
        android:id="@+id/fragment_login_btnRegister"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="28dp"
        android:text="Register"
        app:layout_constraintStart_toEndOf="@+id/fragment_login_btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_etPassword" />

    <ProgressBar
        android:id="@+id/fragment_login_pbProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/fragment_login_btnRegister"
        app:layout_constraintStart_toEndOf="@+id/fragment_login_btnLogin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_login_tvProgressBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Logging in..."
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/fragment_login_btnRegister"
        app:layout_constraintStart_toEndOf="@+id/fragment_login_btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/fragment_login_pbProgressBar" />

    <!--<Button-->
