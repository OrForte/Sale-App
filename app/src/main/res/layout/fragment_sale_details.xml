<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/fragment_sale_details_rlProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_sale_details_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="New Sale"
                android:textColor="@color/colorButton"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/sale_details_image"
                android:layout_width="157dp"
                android:layout_height="144dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="68dp"
                android:src="@drawable/avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_sale_details_tbDescription"
                android:layout_width="120dp"
                android:layout_height="144dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="68dp"
                android:gravity="fill_vertical|center_horizontal"
                android:text="Description"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_sale_details_tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="End Date:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/fragment_sale_details_tbDescription"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_tvStore2" />

            <TextView
                android:id="@+id/fragment_sale_Details_etEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="28dp"
                android:text="end date"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/fragment_sale_details_tvEndDate"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_tvStore2" />


            <TextView
                android:id="@+id/fragment_sale_details_tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:text="City:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_sale_details_etCity"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_tvLocation" />


            <TextView
                android:id="@+id/fragment_sale_details_etCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="city"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.57"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_tvLocation" />

            <TextView
                android:id="@+id/fragment_sale_details_tvMall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:text="Mall:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_sale_details_etMall"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_tvCity" />

            <TextView
                android:id="@+id/fragment_sale_details_etMall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="mall"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.57"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_etCity" />

            <TextView
                android:id="@+id/fragment_sale_details_tvStore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:text="Store:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/fragment_sale_details_etStore"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_tvMall" />

            <TextView
                android:id="@+id/fragment_sale_details_etStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="store"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.57"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_etMall" />

            <TextView
                android:id="@+id/fragment_sale_details_tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Uploaded By:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="?attr/actionModeSplitBackground"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/fragment_sale_details_tvEndDate"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_details_tvEndDate" />

            <TextView
                android:id="@+id/fragment_sale_details_etUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="8dp"
                android:text="user"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/fragment_sale_details_tvUser"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_Details_etEndDate" />

            <TextView
                android:id="@+id/fragment_sale_details_tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Location:"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/fragment_sale_details_etCity"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/fragment_sale_details_tvCity"
                app:layout_constraintTop_toBottomOf="@+id/sale_details_image" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="472dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</LinearLayout>