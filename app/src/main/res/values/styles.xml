<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionModeStyle">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:colorButtonNormal">@color/colorButton</item>
        <item name="android:buttonTint">@color/colorButton</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item><!-- For compatibility with the support library -->
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:datePickerStyle">@style/AppTheme.DatePicker1</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Title</item>
    </style>

    <style name="AppTheme.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.TextView" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:actionModeStyle">@color/colorBlack</item>
    </style>

    <style name="AppTheme.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.DatePicker1" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
